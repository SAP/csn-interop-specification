{
  "$schema": "http://json.schemastore.org/package",
  "name": "@sap/csn-interop-specification",
  "version": "1.0.4",
  "description": "CSN Interop Specification.",
  "author": "SAP SE",
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAP/csn-interop-specification.git"
  },
  "homepage": "https://sap.github.io/csn-interop-specification/",
  "files": [
    "README.md",
    "dist/src/index.js",
    "dist/src/index.d.ts",
    "dist/src/generated/spec-v1"
  ],
  "scripts": {
    "clean": "tsx src/clean.ts",
    "clear": "docusaurus clear",
    "build": "npm run build:ts && npm run generate && npm run build:docu && touch ./build/.nojekyll",
    "build:ts": "tsc -p ./tsconfig.json",
    "build:docu": "rm -rf \"static/spec-v1/\" && mkdir \"static/spec-v1/\" && cp -r src/generated/spec-v1/schemas/*.schema.json -t \"static/spec-v1/\" && cp -r src/generated/spec-v1/docs/extensions/* -t \"docs/spec-v1/extensions/\" && cp -r src/generated/spec-v1/docs/examples/* -t \"docs/spec-v1/examples/\" && cp src/generated/spec-v1/docs/csn-interop-effective.md -t \"docs/spec-v1/\" && docusaurus build",
    "generate": "cd ./spec-toolkit && npm ci && npm run build && cd .. && node ./spec-toolkit/dist/src/cli.js",
    "lint:staged": "lint-staged",
    "eslint": "eslint . --fix",
    "eslint:ci": "eslint .",
    "prettier": "prettier --write \"**/*.{json,yml,yaml,md}\"",
    "prettier:ci": "prettier --check \"**/*.{json,yml,yaml,md}\"",
    "test": "npm run build && npm run test:unit",
    "test:unit": "jest --ci",
    "test:coverage": "jest --ci --collectCoverage",
    "test:watch": "jest --watchAll",
    "serve": "docusaurus serve",
    "prestart": "npm run clear",
    "start": "docusaurus start",
    "prepare": "is-ci || husky"
  },
  "devDependencies": {
    "@docusaurus/core": "3.7.0",
    "@docusaurus/module-type-aliases": "3.7.0",
    "@docusaurus/plugin-client-redirects": "3.7.0",
    "@docusaurus/preset-classic": "3.7.0",
    "@docusaurus/theme-mermaid": "3.7.0",
    "@easyops-cn/docusaurus-search-local": "0.49.2",
    "@sap/eslint-config": "0.4.0",
    "@tsconfig/node20": "20.1.5",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "29.5.14",
    "@types/js-yaml": "4.0.9",
    "@types/lodash": "4.17.16",
    "@types/minimist": "1.2.5",
    "@types/node": "22.15.17",
    "fast-glob": "3.3.3",
    "fs-extra": "11.3.0",
    "gfm-escape": "0.2.0",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jest": "29.7.0",
    "jest-watch-typeahead": "2.2.2",
    "js-yaml": "4.1.0",
    "json-schema": "0.4.0",
    "json-schema-library": "10.0.0",
    "lint-staged": "16.0.0",
    "prettier": "3.5.3",
    "prism-react-renderer": "2.4.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "ts-jest": "29.3.2",
    "tsx": "4.19.4",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "./spec/*/*.yaml": [
      "npm run generate",
      "git add ./src/generated/spec-v1/types/v1/csn-interop-effective.ts",
      "git add ./src/generated/spec-v1/schemas/*"
    ],
    "**/*.{md,json,yaml}": [
      "npm run prettier"
    ]
  }
}
