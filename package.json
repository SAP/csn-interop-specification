{
  "$schema": "http://json.schemastore.org/package",
  "name": "@sap/csn-interop-specification",
  "version": "0.3.0",
  "description": "CSN Interop Specification.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "clean": "tsx src/clean.ts",
    "docusaurus": "docusaurus",
    "clear": "docusaurus clear",
    "build": "npm run build:ts && npm run generate:dist && npm run build:docu && touch ./build/.nojekyll",
    "build:ts": "tsc -p ./tsconfig.json",
    "build:docu": "cp -r \"src/spec-v1\" -t \"static/\" && docusaurus build",
    "generate": "tsx src/generateSpecPage.ts",
    "generate:dist": "node dist/generateSpecPage.js",
    "lint:ci": "npm run prettier:ci",
    "lint:staged": "lint-staged",
    "lint": "npm run prettier",
    "prettier": "prettier --write \"**/*.{json,yml,yaml,md}\"",
    "prettier:ci": "prettier --check \"**/*.{json,yml,yaml,md}\"",
    "test": "npm run build && npm run test:unit",
    "test:unit": "jest --ci",
    "test:coverage": "jest --ci --collectCoverage",
    "test:watch": "jest --watchAll",
    "serve": "docusaurus serve",
    "prestart": "npm run clear",
    "start": "docusaurus start",
    "prepare": "is-ci || husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SAP/csn-interop-specification.git"
  },
  "files": [
    "README.md",
    "dist/index.js",
    "dist/index.d.ts",
    "dist/spec-v1/",
    "dist/types/",
    "dist/spec-toolkit/index.js",
    "dist/spec-toolkit/index.d.ts",
    "dist/spec-toolkit/model/index.js",
    "dist/spec-toolkit/model/index.d.ts",
    "dist/spec-toolkit/model/SpecJsonSchema.d.ts",
    "dist/spec-toolkit/model/SpecJsonSchema.js"
  ],
  "author": "SAP SE",
  "license": "Apache-2.0",
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "11.7.3",
    "@docusaurus/core": "3.7.0",
    "@docusaurus/module-type-aliases": "3.7.0",
    "@docusaurus/preset-classic": "3.7.0",
    "@docusaurus/theme-mermaid": "3.7.0",
    "@easyops-cn/docusaurus-search-local": "0.46.1",
    "@tsconfig/node20": "20.1.4",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "29.5.14",
    "@types/js-yaml": "4.0.9",
    "@types/lodash": "4.17.14",
    "@types/minimist": "1.2.5",
    "@types/node": "22.10.5",
    "fast-glob": "3.3.3",
    "fs-extra": "11.2.0",
    "gfm-escape": "0.2.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-watch-typeahead": "2.2.2",
    "js-yaml": "4.1.0",
    "json-schema": "0.4.0",
    "json-schema-library": "10.0.0-rc7",
    "json-schema-to-typescript": "15.0.3",
    "lint-staged": "15.3.0",
    "lodash": "4.17.21",
    "minimist": "1.2.8",
    "prettier": "3.4.2",
    "prism-react-renderer": "2.4.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "ts-jest": "29.2.5",
    "tslog": "4.9.3",
    "tsx": "4.19.2",
    "typescript": "5.7.2"
  },
  "lint-staged": {
    "./spec/*/*.yaml": [
      "npm run generate",
      "git add ./src/types/v1/CSN-Interop-Effective.ts",
      "git add ./src/spec-v1/*"
    ],
    "**/*.{md,json,yaml}": [
      "npm run prettier"
    ]
  }
}
