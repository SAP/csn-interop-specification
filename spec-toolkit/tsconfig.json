{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
